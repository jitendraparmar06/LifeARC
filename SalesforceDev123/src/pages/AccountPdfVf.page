<apex:page controller="AccountPdfClass" renderAs="pdf" showHeader="false" sidebar="false"  applyHtmlTag="false" standardStylesheets="false" applyBodyTag="false">
    <html>
        <head>
            <style>
                table {
                width: 100%;  
                border:1px;                	
                }
                table tr:nth-child(even) {
                background-color: #f2f2f2;
                }               
                table th {
                background-color: black;
                color: white;
                }
            </style>
        </head>
        <body>
            
            
            <table >
                <tr>
                    <th>Account Name</th>
                    <th>Industry</th>
                    <th>Type</th>
                    <th>Annual Revenue</th>
                    <th>Active</th>
                </tr>
                <apex:repeat value="{!accList}" var="a">
                    <tr>
                        <td> {!a.Name} </td>
                        <td> {!a.Industry} </td>
                        <td> {!a.Type} </td>
                        <td> {!a.AnnualRevenue} </td>
                        <td> {!a.Active__c} </td>
                    </tr>
                </apex:repeat>  
            </table>
        </body>
    </html>		
</apex:page>